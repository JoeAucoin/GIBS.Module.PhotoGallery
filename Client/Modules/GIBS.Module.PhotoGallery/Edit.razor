@using Oqtane.Modules.Controls
@using GIBS.Module.PhotoGallery.Services
@using GIBS.Module.PhotoGallery.Models

@namespace GIBS.Module.PhotoGallery
@inherits ModuleBase
@inject IPhotoGalleryService PhotoGalleryService
@inject NavigationManager NavigationManager
@inject IStringLocalizer<Edit> Localizer

<form @ref="form" class="@(validated ? " was-validated" : "needs-validation" )" novalidate>
    <div class="container">
        <div class="row mb-1 align-items-center">
            <Label Class="col-sm-3" For="name" HelpText="Enter a name" ResourceKey="Name">Name: </Label>
            <div class="col-sm-9">
                <input id="name" class="form-control" @bind="@_name" required />
            </div>
        </div>
    </div>
    <button type="button" class="btn btn-success" @onclick="Save">@Localizer["Save"]</button>
    <NavLink class="btn btn-secondary" href="@NavigateUrl()">@Localizer["Cancel"]</NavLink>
    <br /><br />
    @if (PageState.Action == "Edit")
    {
    <AuditInfo CreatedBy="@_createdby" CreatedOn="@_createdon" ModifiedBy="@_modifiedby" ModifiedOn="@_modifiedon"></AuditInfo>
    }
</form>

@code {
    public override SecurityAccessLevel SecurityAccessLevel => SecurityAccessLevel.Edit;

    public override string Actions => "Add,Edit";

    public override string Title => "Manage PhotoGallery";

    public override List<Resource> Resources => new List<Resource>()
    {
        new Stylesheet("_content/GIBS.Module.PhotoGallery/Module.css")
    };

    private ElementReference form;
    private bool validated = false;

    private int _id;
    private string _name;
    private string _createdby;
    private DateTime _createdon;
    private string _modifiedby;
    private DateTime _modifiedon;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (PageState.Action == "Edit")
            {
                _id = Int32.Parse(PageState.QueryString["id"]);
                PhotoGallery PhotoGallery = await PhotoGalleryService.GetPhotoGalleryAsync(_id, ModuleState.ModuleId);
                if (PhotoGallery != null)
                {
                    _name = PhotoGallery.Name;
                    _createdby = PhotoGallery.CreatedBy;
                    _createdon = PhotoGallery.CreatedOn;
                    _modifiedby = PhotoGallery.ModifiedBy;
                    _modifiedon = PhotoGallery.ModifiedOn;
                }
            }
        }
        catch (Exception ex)
        {
            await logger.LogError(ex, "Error Loading PhotoGallery {PhotoGalleryId} {Error}", _id, ex.Message);
            AddModuleMessage(Localizer["Message.LoadError"], MessageType.Error);
        }
    }

    private async Task Save()
    {
        try
        {
            validated = true;
            var interop = new Oqtane.UI.Interop(JSRuntime);
            if (await interop.FormValid(form))
            {
                if (PageState.Action == "Add")
                {
                    PhotoGallery PhotoGallery = new PhotoGallery();
                    PhotoGallery.ModuleId = ModuleState.ModuleId;
                    PhotoGallery.Name = _name;
                    PhotoGallery = await PhotoGalleryService.AddPhotoGalleryAsync(PhotoGallery);
                    await logger.LogInformation("PhotoGallery Added {PhotoGallery}", PhotoGallery);
                }
                else
                {
                    PhotoGallery PhotoGallery = await PhotoGalleryService.GetPhotoGalleryAsync(_id, ModuleState.ModuleId);
                    PhotoGallery.Name = _name;
                    await PhotoGalleryService.UpdatePhotoGalleryAsync(PhotoGallery);
                    await logger.LogInformation("PhotoGallery Updated {PhotoGallery}", PhotoGallery);
                }
                NavigationManager.NavigateTo(NavigateUrl());
            }
            else
            {
                AddModuleMessage(Localizer["Message.SaveValidation"], MessageType.Warning);
            }
        }
        catch (Exception ex)
        {
            await logger.LogError(ex, "Error Saving PhotoGallery {Error}", ex.Message);
            AddModuleMessage(Localizer["Message.SaveError"], MessageType.Error);
        }
    }
}
